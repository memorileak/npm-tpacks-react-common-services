{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "jest"
  ],
  "rules": {
    "semi": ["error", "always", {"omitLastInOneLineBlock": true}],
    "object-curly-spacing": ["error", "never", {"arraysInObjects": false, "objectsInObjects": false}],
    "space-before-function-paren": ["error", "never"],
    "comma-dangle": ["error", "always-multiline"]
  }
}
